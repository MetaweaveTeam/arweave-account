{
  "compilerOptions": {
    "target": "es2015",
    "skipLibCheck": true,
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitUseStrict": true,
    "alwaysStrict": false
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*",
    "lib"
  ]
}